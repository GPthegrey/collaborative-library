<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card rounded-3 shadow mt-3 bg-primary">
      <div class="card-body">
        <%= simple_form_for(@event) do |f| %>
          <%= f.input :title, label: 'Nombre del evento ' %>
          <%= f.input :description, label: 'Descripcion' %>
          <%= f.input :address, label: 'Direccion' %>
          <div class="form-row">
            <div class="form-group col-sm-6">
              <%= f.input :start_date, label: 'Fecha de inicio',
                    as: :string,
                    input_html: { data: { controller: "datepicker" } } %>
            </div>
            <div class="form-group col-sm-6">
              <%= f.input :end_date, label: 'Fecha de finalizacion',
                    as: :string,
                    input_html: { data: { controller: "datepicker" } } %>
            </div>
          </div>
          <%= f.input :max_assistants, label: 'Cantidad de asistentes', as: :integer, input_html: { min: 3 } %>
          <%= f.input :privacy, collection: ['Public', 'Private'], prompt: 'Select Privacy', label: 'Privacidad' %>
          <%= f.button :submit %>
        <% end %>
      </div>
    </div>
  </div>
</div>
