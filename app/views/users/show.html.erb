<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header bg-primary text-white">
          <h3 class="mb-0 text-dark">Perfil de Usuario</h3>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <p class="lead"><strong>Nombre:</strong> <%= @user.email.split("@").first %></p>
              <p class="lead"><strong>Rating: <%= @rating.nil? ? 'Sin reseñas' : @rating %> <i class="fa-solid fa-star"></i></strong></p>
              <p class="lead"><strong>Ubicación:</strong> </p>
              <%= render 'reviews/reviews', reviews: @reviews %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class='container'>

  <h1>Libros de <%= @user.email.split("@").first %></h1>
</div>
